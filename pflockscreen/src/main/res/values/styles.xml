<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PFLockScreenStyle">
        <item name="android:background">@drawable/background_pf</item>
    </style>

    <style name="PFLockScreenButtonStyle" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/touch_selector_pf</item>
    </style>

    <style name="PFLockScreenFingerPrintButtonStyle">
        <item name="android:src">@drawable/fingerprint_lockscreen_pf</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="PFLockScreenDeleteButtonStyle">
        <item name="android:src">@drawable/delete_lockscreen_pf</item>
        <item name="android:padding">20dp</item>
    </style>


    <style name="PFCheckBox">
        <item name="android:checkboxStyle">@style/PFLockScreenCodeStyle</item>
        <item name="checkboxStyle">@style/PFLockScreenCodeStyle</item>
    </style>

    <style name="PFLockScreenCodeStyle">
        <item name="android:button">@drawable/code_selector_pf</item>
    </style>

    <style name="PFLockScreenNextTextStyle">
        <item name="android:textColor">#9FFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:backgroundTint">#c66</item>
    </style>

    <style name="PFLockScreenHintTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PFLockScreenTitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
